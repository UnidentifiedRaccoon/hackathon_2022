<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rttodolist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RTTodoList"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".TaslListFragment"
            android:exported="false"
            android:label="@string/title_activity_tasl_list_fragment"
            android:theme="@style/Theme.RTTodoList.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.RTTodoList.NoActionBar" />
        <activity
            android:name=".ui.todotask.TaskActivity"
            android:exported="false"
            android:theme="@style/Theme.RTTodoList.NoActionBar" />
        <activity
            android:name=".ui.add.addActivity"
            android:exported="false"
            android:theme="@style/Theme.RTTodoList.NoActionBar" />
        <activity
            android:name=".ui.authorize.Authorize"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RTTodoList.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>